/* Material Style Sheet for QT Applications */

/* Set white background for the entire application */
* {
    background-color: #e3f0fb;
}

/* Set rounded border for all elements */
* {
    border-radius: 16px;
}

/* Material Style Sheet for QT Applications (QpushButton) */
QPushButton {
    border: none;
    color: #ffffff;
    background-color: #2196F3;
    font-size: 14px;
    padding: 8px;
}

QPushButton::default {
    color: #ffffff;
    background-color: #2196F3;
    padding: 8px;
}

QPushButton:hover {
    color: #ffffff;
    background-color: #1E88E5;
}

QPushButton:pressed {
    color: #ffffff;
    background-color: #1565C0;
}

/* Material Style Sheet for QT Applications (QSlider) */
QSlider {
    border: none;
    background-color: #1565C0;
    width: 128px;
    border-radius: 16px;
}

QSlider::groove:vertical {
    background-color: #a6d2f9;
    border-radius: 16px;
}

QSlider::handle:vertical {
    background-color: transparent;
    width: 16px;
    height: 16px;
    margin-top: -8px;
    margin-bottom: 25px;
    margin-left: 32px;
    margin-right: 32px;
}

QSlider::sub-page:vertical {
    background-color: transparent;
    border-radius: 16px;
}

QSlider::add-page:vertical {
    background-color: #2196F3;
    border-radius: 16px;
}

QSlider::handle:horizontal:hover,
QSlider::handle:horizontal:focus,
QSlider::handle:vertical:hover,
QSlider::handle:vertical:focus {
    background-color: #79b7ee;
    border-color: transparent;
    outline: none;
    border-radius: 8px;
}

/* Material Style Sheet for QT Applications (QMainWindow) */
QMainWindow {
    border: none;
    border-radius: 16px;
    color: #e2f1ff;
}

QMainWindow::title {
    background-color: #2196F3;
    color: #ffffff;
    padding: 6px;
}

QMainWindow::separator {
    background-color: #ffffff;
    width: 1px;
    height: 1px;
}

QMainWindow::separator:hover {
    background-color: #ffffff;
}

QMainWindow::separator:horizontal {
    width: 1px;
}

QMainWindow::separator:horizontal QMainWindow::separator:vertical {
    height: 1px;
}

QMainWindow::dockWidgetSeparator {
    background-color: #ffffff;
    width: 1px;
    height: 1px;
}

QMainWindow::dockWidgetSeparator:hover {
    background-color: #ffffff;
}

QMainWindow::dockWidgetSeparator:horizontal {
    width: 1px;
}

QMainWindow::dockWidgetSeparator:vertical {
    height: 1px;
}

/* Material Style Sheet for QT Applications (QLabel) */
QLabel {
    color: #2196F3;
    background-color: transparent;
    font-size: 16px;
    padding: 8px;
}

QLabel::hover {
    color: #2196F3;
    font-size: 20px;
    font-weight: bold;
    padding: 8px;
}

QLabel::selected {
    background-color: #ffffff;
}

QLabel::disabled {
    color: #808080;
}

/* Material Style Sheet for QT Applications (QLineEdit) */
QLineEdit {
    color: #2196F3;
    background-color: #f7fbff;
    font-size: 14px;
    border: 1px solid #2196F3;
    padding: 6px;
}

QLineEdit::hover {
    color: #ffffff;
    background-color: #1E88E5;
}

QLineEdit::focus {
    color: #ffffff;
    background-color: #1565C0;
}

QLineEdit::disabled {
    color: #808080;
    background-color: #2196F3;
}

/* Material Style Sheet for QT Applications (QMenuBar) */
QMenuBar {
    background-color: #2196F3;
    color: #ffffff;
    border: none;
    padding: 2px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background-color: #2196F3;
}


QMenu {
    background-color: #2196F3;
    color: #ffffff;
    border: none;
    margin: 2px;
    padding: 4px;
}

QMenu::item {
    background-color: transparent;
    padding: 4px 20px 4px 20px;
}

QMenu::item:selected {
    background-color: #ffffff;
    color: #2196F3;
}

QMenu::item:hover {
    background-color: #ffffff;
    color: #2196F3;
}